<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.n1etzsch3.novi.mapper.UserAccountMapper">

    <insert id="addUser">
        insert into user_account (username, hashed_password, nickname, email, created_at, updated_at)
        values (#{username}, #{hashedPassword}, #{nickname}, #{email}, #{createdAt}, #{updatedAt})
    </insert>

    <select id="findByUsername" resultType="com.n1etzsch3.novi.pojo.entity.UserAccount">
        select * from user_account where username = #{username}
    </select>

    <select id="findByEmail" resultType="com.n1etzsch3.novi.pojo.entity.UserAccount">
        select * from user_account where email = #{email}
    </select>

</mapper>